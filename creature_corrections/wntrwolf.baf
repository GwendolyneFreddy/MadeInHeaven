IF
  See(NearestEnemyOf(Myself))
  Range(NearestEnemyOf(Myself), 10)
  !GlobalTimerNotExpired("breath", "LOCALS")
THEN
  RESPONSE #40
  SetGlobalTimer("breath", "LOCALS", 60)
  FaceObject(LastSeenBy(Myself))
  ForceSpell(LastSeenBy(Myself), MH_WINTER_WOLF_BREATH)
  Wait(2)
  RESPONSE #60
  Continue()
END


