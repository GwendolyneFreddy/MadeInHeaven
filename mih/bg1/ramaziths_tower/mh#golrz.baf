IF
  Global("RamazithMove", "GLOBAL", 2)
  Allegiance(Myself, NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END
IF
  Dead("Ramazith")
  Allegiance(Myself, NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  AttackedBy([GOODCUTOFF], DEFAULT)
  Allegiance(Myself, NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END


